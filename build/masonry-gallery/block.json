{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "f0xn0v4/masonry-gallery",
  "version": "0.1.0",
  "title": "Masonry Gallery",
  "category": "media",
  "description": "A gallery block with a masonry layout.",
  "attributes": {
    "columnsS": {
      "type": "number",
      "default": 1
    },
    "columnsM": {
      "type": "number",
      "default": 2
    },
    "columnsL": {
      "type": "number",
      "default": 3
    },
    "resolution": {
      "type": "string",
      "enum": [
        "thumbnail",
        "medium",
        "large",
        "full"
      ],
      "default": "large"
    },
    "spacing": {
      "type": "string",
      "default": "1rem"
    },
    "lightbox": {
      "type": "boolean",
      "default": false
    }
  },
  "example": {},
  "supports": {
    "html": false,
    "interactivity": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "masonry-gallery",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}